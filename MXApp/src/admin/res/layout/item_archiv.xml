<RelativeLayout android:id="@+id/RelativeLayoutTop"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_trackdetail_item"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutArchiv"
        style="@style/track_detail_itemStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/textWhen"
            style="@style/track_detail_itemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            tools:text="User"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutArchiv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textLeft"
            style="@style/track_detail_itemContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            tools:text="x\ny\nz\nA"/>

    </RelativeLayout>

</RelativeLayout>
