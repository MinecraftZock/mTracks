<LinearLayout
    android:id="@+id/downloaditem_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/google_recommended_margin"
    android:layout_marginRight="@dimen/own_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.mx.tracks.tracklist.ActivityTrackList"
    tools:showIn="@layout/activity_tracks_list">

    <fragment
        android:id="@+id/tracklist_list"
        android:name="info.mx.tracks.tracklist.FragmentTrackListTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/own_margin"
        android:layout_marginRight="@dimen/own_margin"
        android:layout_weight="3"
        android:tag="FragmentTrackListTab">
    </fragment>

    <FrameLayout
        android:id="@+id/track_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
</LinearLayout>
