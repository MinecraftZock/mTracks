<LinearLayout
    android:id="@+id/downloaditem_list"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/own_margin"
    android:layout_marginRight="@dimen/own_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.mx.tracks.tracklist.ActivityTrackList"
    tools:showIn="@layout/activity_tracks_list">

    <include layout="@layout/adword"/>

    <fragment
        android:id="@+id/track_list_fragment"
        android:name="info.mx.tracks.tracklist.FragmentTrackListTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/own_margin"
        android:layout_marginRight="@dimen/own_margin"
        android:tag="FragmentTrackListTab">
    </fragment>
</LinearLayout>
